<ol class="breadcrumb">
    <li><a href="/admin/home">{{l10n "Home"}}</a></li>
    <li class="active">{{l10n "Sticker Management"}}</li>
</ol>

<h1 style="max-width:50%; display: inline-block;">{{l10n "Sticker Management"}}</h1>

<button type="button" class="btnAddNew pull-right" onClick="location.href = '/admin/sticker/add';">
    <i class="fa fa-plus" style="margin-right:10px;"></i>
    {{l10n "Add New"}}
</button>

<hr />

{{> alertMessage }}

<div class="searchbar">
    <form method="post" action="/admin/sticker/search" id="searchform" class="form-inline">
        <div class="form-group">
            <input type="text" name="keyword" id="tb-keyword" class="form-control" value="{{keyword}}" placeholder="{{l10n "type keyword here..."}}">
        </div>
        
        {{#if keyword}}
            <button type="button" id="btn-clear" name="clear" value="clear" class="btn btn-danger" >{{l10n "Clear"}}</button>
        {{/if}}

        <button type="submit" class="btn btn-primary btnSearch">{{l10n "Search"}}</button>
        
        
    </form>
</div>

{{> paginator }}

<table class="table table-hover">
    
    <thead>
        <tr>
            <th width="5%"></th>
            <th>{{l10n "Name"}}</th>
            <th width="15%">{{l10n "Description"}}</th>
            <th width="15%">{{l10n "Created At"}}</th>
            <th width="5%"></th>
            <th width="5%"></th>
        </tr>
    </thead>
    
    <tbody>
    {{#each list}}

        <tr>
            <td>
                <img class="list-thumbnail img-rounded" src="/admin/file/{{getMainPicture pictures}}" />
            </td>
            <td class="list-edit-link">
                {{#if organizationId}}
                    <a href="/admin/sticker/edit/{{_id}}">
                        <strong>{{name}}</strong>
                    </a>
                {{else}}
                    <a href="/admin/sticker/view/{{_id}}">
                        <strong>{{name}}</strong>
                    </a>
                {{/if}}
                <br/>
                <span class="small">{{_id}}</span>
            </td>
            <td>{{description}}</td>
            <td>{{formatDate created}}</td>

            {{#if organizationId}}
                <td>
                    <button type="button" class="buttonGreenGhoust" onclick='location.href="/admin/sticker/edit/{{_id}}"'>{{l10n "Edit"}}</button>
                </td>
                <td>
                    <button type="button" class="buttonRedGhoust" onclick='location.href="/admin/sticker/delete/{{_id}}"'>{{l10n "Delete"}}</button>
                </td>
            {{else}}
                <td></td>
                <td>
                    <button type="button" class="buttonGreenGhoust" onclick='location.href="/admin/sticker/view/{{_id}}"'>{{l10n "View"}}</button>
                </td>
            {{/if}}

        </tr>

    {{/each}}
    </tbody>
    
</table>
    
{{> paginator }}

<script type="text/javascript">
     
    $(document).ready(function() {

        $('#btn-clear').on('click',function(){
            
            $('#tb-keyword').val('');     
            $('#searchform').submit();   
         
        });
        
    });
        
</script>