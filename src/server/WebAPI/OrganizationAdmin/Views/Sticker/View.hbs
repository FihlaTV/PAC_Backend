
<ol class="breadcrumb">
    <li><a href="/admin/home">{{l10n "Home"}}</a></li>
    <li><a href="/admin/sticker/list">{{l10n "Sticker Management"}}</a></li>
    <li class="active">{{l10n "View"}}</li>
</ol>

<h1 style="max-width:50%">{{l10n "View Sticker Collection"}}</h1>
<h3 style="margin-top:10px">{{formValues.name}}</h3>

<hr>

{{> alertMessage }}

<form>
  <input type="hidden" name="_id" class="form-control" id="input1" value="{{formValues._id}}">
  
  <div class="form-group">
    <label for="input1">{{l10n "Sticker Collection Name"}}</label>
    <input type="text" disabled="disabled" name="name" class="form-control" id="text1" placeholder="{{l10n "Name"}}" value="{{formValues.name}}">
  </div>
  
  <div class="form-group">
    <label for="sortName">{{l10n "Sort Sticker Collection Name"}}</label>
    <input type="text" disabled="disabled" name="sortName" class="form-control" id="sortName" placeholder="{{l10n "Sort Name"}}" value="{{formValues.sortName}}">
    <p class="help-block">{{l10n "This name will be used for sorting data."}}</p>
  </div>
  
  <div class="form-group">
    <label for="input2">{{l10n "Description"}}</label>
    <textarea rows="4" disabled="disabled" name="description" class="form-control" placeholder="{{l10n "Description"}}">{{formValues.description}}</textarea>
  </div>

  <div class="form-group">
    <label for="input3">{{l10n "Files"}}</label>
    <div class="row">

      {{#each formValues.pictures}}
        <div class="avatar-container col-md-2">
          <img class="edit-thumbnail img-rounded" src="/admin/file/{{thumbnail.nameOnServer}}" />
          <label class="radio-inline">
            <input type="radio" disabled="disabled" name="main" value="{{thumbnail.nameOnServer}}" {{{checkedIfEqual main true}}} />{{l10n "Main Sticker"}}
          </label>
        </div>
      {{/each}}

    </div>
  </div>
  
</form>
