
<ol class="breadcrumb">
    <li><a href="/admin/home">{{l10n "Home"}}</a></li>
    <li><a href="/admin/group/list">{{l10n "Group Management"}}</a></li>
    <li class="active">{{l10n "Edit"}}</li>
</ol>

<h1 style="max-width:50%">{{l10n "Editing Group"}}</h1>
<h3 style="margin-top:10px">{{formValues.name}}</h3>

<hr>

{{> alertMessage }}

<form method="post" action="/admin/group/edit/{{formValues._id}}" enctype="multipart/form-data">
  <input type="hidden" name="_id" class="form-control" id="input1" value="{{formValues._id}}">
  
  <div class="form-group">
    <label for="input1">{{l10n "Group Name"}}</label>
    <input type="text" name="name" class="form-control" id="text1" placeholder="{{l10n "Name"}}" value="{{formValues.name}}">
  </div>
  
  <div class="form-group">
    <label for="sortName">{{l10n "Sort Group Name"}}</label>
    <input type="text" name="sortName" class="form-control" id="sortName" placeholder="{{l10n "Sort Name"}}" value="{{formValues.sortName}}">
    <p class="help-block">{{l10n "This name will be used for sorting data."}}</p>
  </div>
  
  <div class="form-group">
    <label for="input2">{{l10n "Description"}}</label>
    <textarea rows="4" name="description" class="form-control" placeholder="{{l10n "Description"}}">{{formValues.description}}</textarea>
  </div>

  <div class="form-group">
    <label>{{l10n "Avatar"}}</label><br/>
    
    {{#if formValues.avatar.thumbnail.nameOnServer}}
      <div class="avatar-container">
        <img class="edit-thumbnail img-rounded" src="/admin/file/{{formValues.avatar.thumbnail.nameOnServer}}" />
        <button class="avatar-delete-button" name="deleteAvatar" value="deleteAvatar">{{l10n "Delete avatar"}}</button>
      </div>
    {{/if}}

    <input type="file" name="avatar" />
    <p class="help-block">{{getImageNote}}</p>
  </div>

  <button  type="submit" class="btnSend pull-right">
      <i class="fa fa-floppy-o" style="margin-right:10px;"></i>
      {{l10n "Save"}}
  </button>

</form>
