<body>
    <nav class="navbar navbar-default no-margin navbar-fixed-top">
        
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header fixed-brand">
            
            <button class="navbar-toggle collapsed" type="button" data-toggle="dropdown" id="menu-toggle">
                <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
            </button>

            <ul class="dropdown-menu pull-right">

                <li>
                    <a href="/owner/home"><span class="fa-stack fa-lg"><i class="fa fa-dashboard fa-stack"></i></span>{{l10n "Dashboard"}}</a>
                </li>

                <li>
                    <a href="/owner/organization/list"><span class="fa-stack fa-lg"><i class="fa fa-building fa-stack"></i></span>{{l10n "Organizations"}}</a>
                </li>

                <li>
                    <a href="/owner/sticker/list"><span class="fa-stack fa-lg"><i class="fa fa-smile-o fa-stack"></i></span>{{l10n "Stickers"}}</a>
                </li>
                
                <li>
                    <a href="/owner/signout"><span class="fa-stack fa-lg"><i class="fa fa-sign-out fa-stack"></i></span>{{l10n "Logout"}}</a>
                </li>

            </ul>

            <a class="navbar-brand" href="#">{{l10n "Spika For Business Owner"}}</a>

        </div>

    </nav>
    
    <div id="wrapper">
