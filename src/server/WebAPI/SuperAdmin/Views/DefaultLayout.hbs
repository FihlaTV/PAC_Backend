        <div id="sidebar-wrapper">
            <ul class="sidebar-nav nav-pills nav-stacked" id="menu">
                
                <li {{{printIfEqual page 'home' 'class="active1"'}}}>
                    <a href="/owner/home"><span class="fa-stack fa-lg pull-left"><i class="fa fa-dashboard fa-stack-1x"></i></span>{{l10n "Dashboard"}}</a>
                </li>
                
                <li {{{printIfEqual page 'organization-list' 'class="active1"'}}}>
                    <a href="/owner/organization/list"><span class="fa-stack fa-lg pull-left"><i class="fa fa-building fa-stack-1x"></i></span>{{l10n "Organizations"}}</a>
                </li>

                <li {{{printIfEqual page 'sticker-list' 'class="active1"'}}}>
                    <a href="/owner/sticker/list"><span class="fa-stack fa-lg pull-left"><i class="fa fa-smile-o fa-stack-1x"></i></span>{{l10n "Stickers"}}</a>
                </li>

                <li>
                    <a href="/owner/signout"><span class="fa-stack fa-lg pull-left"><i class="fa fa-sign-out fa-stack-1x"></i></span>{{l10n "Logout"}}</a>
                </li>
                
            </ul>
        </div><!-- /#sidebar-wrapper -->
