
    <div class="container">
        <div class="col-md-6 col-md-offset-2">
            <div class="login col-md-12"> 
                <img class="spikaLoginImg" src="{{AssetURL}}/images/spikaLogo.svg">
                <div class="clearfix"></div>
                <p>{{l10n "Welcome to"}}</p>
                <h2>{{l10n "Spika for Business: Owner"}}</h2> 
                <br>
                
                
                <div class="col-md-12">
                    
                    <form method="post" onsubmit="return onSubmit()">

                        {{> alertMessage }}

                        <input class="form-control" name="username" id="text-name" type="text" placeholder="{{l10n "Enter user name..."}}" value="{{username}}" autofocus="autofocus">
                        <br>
                        <input class="form-control" name="password" id="text-password" type="password" placeholder="{{l10n "Password"}}" value="{{password}}">                
                        
                        <button type="submit" class="Loginbutton">{{l10n "Login"}}</button>
                        
                        <div class="checkbox" style="margin-top:10px">

                        <label class="checkbox-inline"> <input type="checkbox" name="rememberMe" id="chkbox-remember">{{l10n "Remember password"}}</label>

                        </div>
                        {{!-- <div class="pull-right  col-sm-6" style="margin-top:10px">
                            <a href="#">{{l10n "Forgot password?"}}</a>
                        </div> --}}
                    
                    </form>
                                     
                    {{!-- <div class="clearfix"> </div>
                    <br><br>
                    <div class="container-fluid signUp"> 
                        <p> {{l10n "Not allready a member?"}}</p>
                        <button type="button" class="btn signUpBtn">{{l10n "Sign up"}}</button>
                    </div> --}}
                </div>                
            </div>
        </div>
    </div>
    
    <script type="text/javascript">
    	
		$(function() {

			var savedUserName = localStorage.getItem("spadmin-loginname");
			var savedPassword = localStorage.getItem("spadmin-loginpassword");

			var nameEnabled = false;
			var passwordEnabled = false;

			if(savedUserName && savedUserName != ""){
				$('#text-name').val(savedUserName);
				nameEnabled = true;
			}

			if(savedPassword && savedPassword != ""){
				$('#text-password').val(savedPassword);
				passwordEnabled = true;
			}
			
			if(nameEnabled && passwordEnabled)
				$("#chkbox-remember").attr('checked','checked');	
				
		});
		
    	function onSubmit() {

	        if(typeof(Storage) === "undefined")
	            return false;

			if($("#chkbox-remember").is(':checked')){
				
				localStorage.setItem("spadmin-loginname", $('#text-name').val());
				localStorage.setItem("spadmin-loginpassword", $('#text-password').val());

			}else{
				
				localStorage.setItem("spadmin-loginname", "");
				localStorage.setItem("spadmin-loginpassword", "");
				
			}

    		return true;
    	}
    	
    </script>