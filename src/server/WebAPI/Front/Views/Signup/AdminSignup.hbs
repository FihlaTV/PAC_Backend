
 <div id="view-signup">

     <div class="col-md-6 col-md-push-6 hidden-sm hidden-xs bigpicture fixscreen">
         
         <span class="helptext">{{l10n "Select your organization name, and please input information to signin as organization admin."}}</span>
         
         <img src="/assets/front/images/adminSignup.png" />
         
         <span class="trademark">
            
            &copy; 2016 Clover Studio Ltd. All rights reserved
                
         </span>
         
     </div>
     
     <div class="col-md-6 col-sm-12 col-md-pull-6 forms fixscreen">
         
         <div class="logo-container">
            
            <img src="/images/UI/logo.png" />
            
            <div class="welcome">
                <div class="text">{{l10n "Welcome to"}}</div>

                <div class="title">{{l10n "Signup New Organization"}}</div>
                
            </div>
                
         </div>
         
         <div class="form-container">
            
            <form id="mainform" method="post">

                {{> alertMessage }}

                {{!-- this line is to prevent google-s autofill  --}}
                <input style="display:none;" type="password" name="password" />

                <input class="form-control" name="organizationId" id="text-organizationId" type="text" placeholder="{{l10n "Enter organization ID..."}}" value="{{organizationId}}" {{{setFocus "organizationId" focusField}}}>

                <input class="form-control" name="username" id="text-name" type="text" placeholder="{{l10n "Enter user name..."}}" value="{{username}}" {{{setFocus "username" focusField}}}>

                <input class="form-control" name="password" id="text-password" type="password" placeholder="{{l10n "Enter password"}}" value="{{password}}" {{{setFocus "password" focusField}}}> 

                <input class="form-control" name="reenterPassword" id="text-reenterPassword" type="password" placeholder="{{l10n "Re-enter password"}}" value="{{reenterPassword}}" {{{setFocus "reenterPassword" focusField}}}> 
                
                <input class="form-control" name="email" id="text-email" type="email" placeholder="{{l10n "Enter e-mail (optional)..."}}" value="{{email}}" {{{setFocus "email" focusField}}}>
                
                <button type="submit" class="btn-primary btn-block btn-lg Loginbutton" id="btn-login"> <i class="fa fa-cog fa-spin hide"></i> {{l10n "Sign up"}} </button>
            
            </form>
            
         </div>
     
    
    </div>

</div>
