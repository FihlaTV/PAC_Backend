    <!-- /#wrapper -->
    <!-- jQuery -->

    <script type="text/javascript">
        
        var slideWidth = "";

        $(function() {
            
            var winHeight = $(window).height()
            var baseHeight = $('.fixscreenbase').height();
            
            var height = winHeight;
            if(winHeight < baseHeight)
                height = baseHeight;
            
            $('.fixscreen').height(height);
        });
        
        $(window).resize(function() {

            var winHeight = $(window).height()
            var baseHeight = $('.fixscreenbase').height();
            
            var height = winHeight;
            if(winHeight < baseHeight)
                height = baseHeight;
                
            $('.fixscreen').height(height);

            slideWidth = $('#slider').outerWidth();

            var slideCount = $('#slider ul li').length;                        
            var sliderUlWidth = slideCount * slideWidth;

            $('#slider ul').css({ width: sliderUlWidth });
            $('#slider ul li').css({ width: slideWidth });

        });
        
        jQuery(document).ready(function ($) {
          
            var stepNumber = 1;

            $(window).resize();

            $('#lastStep').hide();

            setActiveSlider(stepNumber);

            $('#nextStep').click(function () {
            
                setActiveSlider(++stepNumber);

                $('#slider ul').animate({ left: - slideWidth }, 200, function () {
                    $('#slider ul li:first-child').appendTo('#slider ul');
                    $('#slider ul').css('left', '');
                });

            });
            
            function setActiveSlider(stepNumber) {

                var dot1 = $('#dot1');
                var dot2 = $('#dot2');
                var dot3 = $('#dot3');

                var lastStep = $('#lastStep');
                var nextStep = $('#nextStep');

                switch (stepNumber) {

                    case 1:    
                        dot1.css('opacity', '1');
                        dot2.css('opacity', '0.4');
                        dot3.css('opacity', '0.4');
                        break;

                    case 2:
                        dot1.css('opacity', '0.4');
                        dot2.css('opacity', '1');
                        dot3.css('opacity', '0.4');
                        break;

                    case 3:
                        dot1.css('opacity', '0.4');
                        dot2.css('opacity', '0.4');
                        dot3.css('opacity', '1');

                        nextStep.hide();
                        lastStep.show();                
                        break;     

                }
            };

        });  

    </script>
    
