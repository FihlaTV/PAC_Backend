<div class="message-cell {{isMine}} thumb" id="{{id}}" userid="{{userID}}" ts="{{created}}">
    
    <div class="status status{{status}}">
        
        <span class="sending glyphicon glyphicon-arrow-right"></span>
        <span class="sent glyphicon glyphicon-ok-circle  "></span>

    </div>
        
	<div class="avatar">
		<img class="img-circle" src="{{stripHost avatarURL }}" />
    </div>
    
    <span class="info">
        
        {{#if isMainForIf}}
        
            <span class="name"> {{name}} </span>
            <span class="time"> {{formatTime created}} </span>   
        
        {{/if}}  
        
        {{#unless isMainForIf}}

            <span class="name"> {{name}} </span>
            <span class="time"> {{formatTime created}} </span>   
        
        {{/unless}}     
    
    </span>
    
    <div class="thumb-container">
        
        <div>
            <a href="{{downloadURL}}" class="spika-thumb" id="{{id}}">
                <img src="{{thumbURL}}" />
            </a> 

            <span class="infoicon">
                {{#if isFavorite}} <i class="fa fa-heart"></i><br /> {{/if}}
            </span>

        </div>
                
    </div>

    
    <div class="clearfix"></div>
    
</div>

