<div class="message-cell {{isMine}} text" id="{{_id}}" userid="{{userID}}" ts="{{created}}" localId="{{localID}}">
    
    <div class="status status{{status}}">
        
        <span class="sending glyphicon glyphicon-arrow-right"></span>
        <span class="sent glyphicon glyphicon-ok-circle  "></span>
        
    </div>
        
	<div class="avatar">
		<img class="img-circle" src="/api/v2/avatar/user/{{avatarFileId}}" />
    </div>

    <div class="info">
        
        <span class="name"> {{name}} </span>
        <span class="time"> {{formatTimeForChat created}} </span>        
        
    </div>
    
    <div class="message">
        <div>
            {{#if isFavorite}} <i class="fa fa-heart"></i> {{/if}} {{{ message }}}
        </div>
    </div>
    
    <div class="clearfix"></div>
    
</div>

