
    {{#each list}}
        
        <div class="chat-target  {{#if unreadCount }} unread {{/if}}" id="{{_id}}">
            
        {{#condition chatType 1}}
            
            <div class="private">
                
                <div class="img-holder">
                    <img class="img-circle" src="/api/v2/avatar/user/{{user.avatar.thumbnail.nameOnServer}}" />
                </div>

                {{#if user.onlineStatus}}  <img class="img-circle onlineicon" src="/images/onlineIcon.png" /> {{/if}}

                <div class="name">
                    {{strip user.name 15}}
                </div>
                
                <div class="lastmessage">
                    {{#if currentUserIsSender}} <b>{{l10n "You"}}</b>: {{/if}} {{strip lastMessage.message 32}}
                </div>

                <div class="lasttimestamp">{{ufDate lastMessage.created}}</div>
                
                {{#if unreadCount }}<span class="badge">{{unreadCount }}</span>{{/if}}
                
            </div>
            

        {{/condition}}
 
        {{#condition chatType 2}}
            
            <div class="group">

                <div class="img-holder">
                    <img class="img-circle" src="/api/v2/avatar/group/{{group.avatar.thumbnail.nameOnServer}}" />
                </div>
                
                <div class="name">{{strip group.name 15}}</div>
                
                <div class="lastmessage">
                    {{#if lastMessage.user}} 
                        {{#if currentUserIsSender}} <b>{{l10n "You"}}</b>: {{else}} <b>{{strip lastMessage.user.name 15}}</b>: {{/if}}
                    {{else}}
                        {{#if currentUserIsSender}} <b>{{l10n "You"}}</b>: {{else}} <b>{{strip lastUpdateUser.name 15}}</b>: {{/if}}
                    {{/if}}
                    {{strip lastMessage.message 20}}
                </div>

                <div class="lasttimestamp">{{ufDate lastMessage.created}}</div>

                {{#if unreadCount }}<span class="badge">{{unreadCount }}</span>{{/if}}
                
            </div>
            
        {{/condition}}
        
        {{#condition chatType 3}}

            <div class="room">

                <div class="img-holder">
                    <img class="img-circle" src="/api/v2/avatar/room/{{room.avatar.thumbnail.nameOnServer}}" />
                </div>
                
                <div class="name">{{strip room.name 15}}</div>
                
                <div class="lastmessage">
                    {{#if lastMessage.user}} 
                        {{#if currentUserIsSender}} <b>{{l10n "You"}}</b>: {{else}} <b>{{strip lastMessage.user.name 15}}</b>: {{/if}}
                    {{else}}
                        {{#if currentUserIsSender}} <b>{{l10n "You"}}</b>: {{else}} <b>{{strip lastUpdateUser.name 15}}</b>: {{/if}}
                    {{/if}}
                    {{strip lastMessage.message 20}}
                </div>

                <div class="lasttimestamp">{{ufDate lastMessage.created}}</div>
                
                {{#if unreadCount }}<span class="badge">{{unreadCount }}</span>{{/if}}
                
            </div>
            
        {{/condition}}

            <div class="clearfix"></div>
        </div>
        
    {{/each}}