<div class="modal fade detailinfotab" id="modal1">
    
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                   {{room.name}}
                </h4>
            </div>
            <div class="modal-body">
                
                <div>

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#groupdetail-general" aria-controls="general" role="tab" data-toggle="tab">{{l10n "General"}}</a></li>
                        <li role="presentation"><a href="#groupdetail-members" aria-controls="profile" role="tab" data-toggle="tab">{{l10n "Members"}}</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        
                        <div role="tabpanel" class="tab-pane active" id="groupdetail-general">
                            
                            <img class="img-rounded" src="/api/v2/avatar/room/{{room.avatar.picture.nameOnServer}}" />
                            
                            <span class="detail-label">{{l10n "Created"}}</span><spsn class="detail-value">{{formatDate room.created}}</spsn><br />
                            <span class="detail-label">{{l10n "Number of members"}}</span><spsn class="detail-value">{{room.usersCount}}</spsn>

                            <div class="description">
                                <span class="detail-label">{{l10n "Description"}}</span><br />
                                {{room.description}}
                            </div>
                            
                            <div class="clearfix"></div>
                            
                        </div>
                        
                        <div role="tabpanel" class="tab-pane" id="groupdetail-members">
                            
                            <div id="memberlist">
                                
                                <table class="table table-striped">
                                    
                                    
                                    
                                </table>
                                
                            </div>
                            
                        </div>
                        
                    </div>

                </div>
                
            <div class="modal-footer">
                <button type="button" id="modal-btn-close" class="btn btn-default" data-dismiss="modal">{{l10n "Close"}}</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
