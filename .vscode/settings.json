{
    "search.exclude": {
        "**/node_modules": false,
        "**/bower_components": true
    },
    "editor.formatOnSave": false,
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[html]": {
        "editor.formatOnSave": true
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "html.format.enable": true,
    "html.format.indentHandlebars" : true,
    "html.format.preserveNewLines": true,

    "files.associations": {
        "*.hbs": "handlebars"
    }
}